@using Microsoft.AspNetCore.Identity
@using EventSphere.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventSphere</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        /* Gradient Navbar */
        .navbar {
            background: linear-gradient(135deg, #6C63FF, #FF6584);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

            .navbar .nav-link {
                color: #fff !important;
                font-weight: 500;
                transition: color 0.3s, transform 0.3s;
            }

                .navbar .nav-link:hover {
                    color: #ffeb3b !important;
                    transform: scale(1.05);
                }

        /* Buttons */
        .btn-primary, .btn-outline-light {
            border-radius: 50px;
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .btn-primary:hover, .btn-outline-light:hover {
                transform: scale(1.05);
                box-shadow: 0 8px 25px rgba(0,0,0,0.2);
            }

        /* Footer */
        footer {
            background: #222;
            color: #fff;
            padding: 25px 0;
            text-align: center;
            margin-top: auto;
        }

        /* Body adjustments */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            font-family: 'Segoe UI', sans-serif;
            scroll-behavior: smooth;
        }

        /* Interactive hover effect on nav items */
        .navbar-nav .nav-item .nav-link {
            position: relative;
        }

            .navbar-nav .nav-item .nav-link::after {
                content: '';
                position: absolute;
                width: 0;
                height: 2px;
                background: #ffeb3b;
                left: 0;
                bottom: 0;
                transition: width 0.3s;
            }

            .navbar-nav .nav-item .nav-link:hover::after {
                width: 100%;
            }

        /* Container spacing */
        .container {
            padding-top: 40px;
            padding-bottom: 40px;
        }

        /* Sticky footer fix */
        main {
            flex: 1 0 auto;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container-fluid px-4">
            <a class="navbar-brand fw-bold text-white" asp-controller="Home" asp-action="Index" style="font-size:1.6rem;">EventSphere</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Events" asp-action="PublicIndex">Events</a></li>
                    }
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a></li>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Dashboard" asp-action="AdminDashboard">Admin Panel</a></li>
                        }
                        else if (User.IsInRole("Organizer"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Dashboard" asp-action="OrganizerDashboard">Organizer Panel</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Events" asp-action="Index">My Events</a></li>
                        }
                        else if (User.IsInRole("Participant") || User.IsInRole("Student"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Dashboard" asp-action="StudentDashboard">My Dashboard</a></li>
                        }
                    }
                </ul>

                <ul class="navbar-nav ms-auto">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <span class="navbar-text text-white me-3 fw-semibold">
                                Hello, @UserManager.GetUserName(User)
                            </span>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="btn btn-outline-light btn-sm me-2" asp-controller="Account" asp-action="Login">Login</a></li>
                        <li class="nav-item"><a class="btn btn-primary btn-sm" asp-controller="Account" asp-action="Register">Register</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <main class="flex-grow-1">
        <div class="container">
            @RenderBody()
        </div>
    </main>

 
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/html5-qrcode/minified/html5-qrcode.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
