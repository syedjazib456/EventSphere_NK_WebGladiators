@model IEnumerable<EventSphere.Models.Event>

@{
    var registeredEvents = ViewBag.RegisteredEvents as List<int> ?? new List<int>();
}

<div class="container my-5">
    <!-- Dashboard Header -->
    <div class="text-center mb-5">
        <h2 class="fw-bold text-gradient">
            <i class="bi bi-mortarboard-fill"></i> Student Dashboard
        </h2>
        <p class="text-muted">Explore and register for upcoming events</p>
    </div>

    <!-- Success Message -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success shadow-sm text-center fw-semibold">
            @TempData["Message"]
        </div>
    }

    <!-- Events Grid -->
    <div class="row g-4">
        @foreach (var ev in Model)
        {
            <div class="col-md-4">
                <div class="card event-card h-100 border-0 shadow-sm">
                    <div class="card-body d-flex flex-column p-4">
                        <h5 class="card-title fw-bold text-primary">
                            <i class="bi bi-calendar-event"></i> @ev.Title
                        </h5>
                        <p class="card-text text-muted">@ev.Description</p>

                        <ul class="list-unstyled small mb-4">
                            <li><i class="bi bi-tag-fill text-info"></i> <strong>Category:</strong> @ev.Category</li>
                            <li><i class="bi bi-calendar-check text-success"></i> <strong>Date:</strong> @ev.Date.ToString("dd MMM yyyy")</li>
                            <li><i class="bi bi-geo-alt-fill text-danger"></i> <strong>Venue:</strong> @ev.Venue</li>
                        </ul>

                        <div class="mt-auto">
                            @if (registeredEvents.Contains(ev.EventId))
                            {
                                <span class="badge bg-gradient-success px-3 py-2 fs-6">
                                    <i class="bi bi-check-circle"></i> Registered
                                </span>
                            }
                            else
                            {
                                <form asp-action="Register" method="post">
                                    <input type="hidden" name="EventId" value="@ev.EventId" />
                                    <button type="submit" class="btn classy-btn w-100">
                                        <i class="bi bi-pencil-square"></i> Register
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Custom Styles -->
<style>
    .text-gradient {
        background: linear-gradient(45deg, #0d6efd, #6610f2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .event-card {
        border-radius: 18px;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .event-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }

    .classy-btn {
        background: linear-gradient(45deg, #0d6efd, #6610f2);
        border: none;
        color: #fff;
        font-weight: 600;
        border-radius: 12px;
        padding: 10px;
        transition: all 0.3s ease-in-out;
    }

        .classy-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0px 6px 18px rgba(0,0,0,0.2);
        }

    .bg-gradient-success {
        background: linear-gradient(45deg, #28a745, #20c997);
        color: #fff;
        border-radius: 8px;
    }
</style>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
