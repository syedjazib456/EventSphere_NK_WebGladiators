@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container my-5">
    <!-- Dashboard Header -->
    <div class="text-center mb-5">
        <h2 class="fw-bold text-gradient">
            <i class="bi bi-speedometer2"></i> Admin Dashboard
        </h2>
        <p class="text-muted">Welcome Admin! Manage events, users, and reports here.</p>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card stat-card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-event display-5 text-primary"></i>
                    <h4>@ViewBag.TotalEvents</h4>
                    <p class="text-muted">Total Events</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill display-5 text-success"></i>
                    <h4>@ViewBag.TotalUsers</h4>
                    <p class="text-muted">Users</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="bi bi-graph-up-arrow display-5 text-warning"></i>
                    <h4>@ViewBag.Reports</h4>
                    <p class="text-muted">Reports</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="bi bi-cash-stack display-5 text-danger"></i>
                    <h4>@ViewBag.Revenue</h4>
                    <p class="text-muted">Revenue</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card action-card shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-plus-circle-fill text-success fs-1"></i>
                    <h5>Create Event</h5>
                    <a asp-controller="Events" asp-action="Create" class="btn btn-success mt-2 w-100">Go</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card action-card shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-people text-primary fs-1"></i>
                    <h5>Manage Users</h5>
                    <a asp-controller="Users" asp-action="Index" class="btn btn-primary mt-2 w-100">Go</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card action-card shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-bar-chart-line-fill text-warning fs-1"></i>
                    <h5>View Reports</h5>
                    <a asp-controller="Reports" asp-action="Index" class="btn btn-warning mt-2 w-100">Go</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5>📊 Events Distribution</h5>
                    <canvas id="eventsPie"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5>📈 Attendance Trends</h5>
                    <canvas id="attendanceBar"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Styles -->
<style>
    .text-gradient {
        background: linear-gradient(45deg, #0d6efd, #6610f2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .stat-card {
        border-radius: 15px;
        background: #fff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

    .action-card {
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .action-card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }
</style>

<!-- Bootstrap Icons + Chart.js -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
