@model EventSphere.Models.ViewModels.LoginViewModel

<div class="login-wrapper d-flex align-items-center justify-content-center" style="min-height:100vh; background: linear-gradient(135deg, #6C63FF, #FF6584);">
    <div class="login-card bg-white p-5 rounded-4 shadow-lg" style="max-width:400px; width:100%;">

        <h2 class="text-center fw-bold mb-4" style="color:#333;">Welcome Back</h2>
        <p class="text-center text-muted mb-4" style="font-size:0.95rem;">
            Login to access your EventSphere account
        </p>

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold">Email</label>
                <input asp-for="Email" class="form-control form-control-lg" style="border-radius: 50px; padding:12px;" />
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="form-label fw-semibold">Password</label>
                <input asp-for="Password" type="password" class="form-control form-control-lg" style="border-radius: 50px; padding:12px;" />
            </div>

            <button type="submit" class="btn btn-gradient w-100 fw-bold mb-3" style="padding:12px; border-radius:50px; font-size:1rem;">
                Login
            </button>
        </form>

        <p class="text-center text-muted" style="font-size:0.9rem;">
            Don’t have an account?
            <a href="Register" style="color:#6C63FF; text-decoration:none;">Sign Up</a>
        </p>
    </div>
</div>


