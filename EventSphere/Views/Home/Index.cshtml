@{
    ViewData["Title"] = "EventSphere - Home";
}

<section class="hero-section py-5" style="background: linear-gradient(135deg, #6C63FF, #FF6584); color: #fff;">
    <div class="container text-center py-5">
        <h1 style="font-size: 3rem; font-weight: 700; margin-bottom: 20px; text-shadow: 2px 2px 10px rgba(0,0,0,0.25);">
            Welcome to EventSphere 🎉
        </h1>
        <p style="font-size: 1.25rem; margin-bottom: 30px; text-shadow: 1px 1px 6px rgba(0,0,0,0.2); max-width: 650px; margin-left:auto; margin-right:auto;">
            Explore upcoming and past college events, register, and participate seamlessly. Never miss an opportunity to be part of your campus life!
        </p>
        <a asp-controller="Events" asp-action="PublicIndex"
           style="display: inline-block; background: #fff; color: #6C63FF; font-weight: 600; padding: 15px 40px; border-radius: 50px; box-shadow: 0 6px 20px rgba(0,0,0,0.15); text-decoration:none; transition: all 0.3s;">
            View Events
        </a>
    </div>
</section>


<section class="features-section py-5" style="background-color: #f9f9fb;">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4">
                <div style="background: #fff; border-radius: 12px; padding: 35px 20px; text-align:center; box-shadow: 0 8px 20px rgba(0,0,0,0.05); transition: transform 0.3s;">
                    <div style="font-size: 3rem; color: #6C63FF; margin-bottom: 15px;">📅</div>
                    <h5 style="font-weight: 700; margin-bottom: 10px;">Upcoming Events</h5>
                    <p style="color: #555;">Discover all upcoming events in your college and stay ahead of the crowd.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div style="background: #fff; border-radius: 12px; padding: 35px 20px; text-align:center; box-shadow: 0 8px 20px rgba(0,0,0,0.05); transition: transform 0.3s;">
                    <div style="font-size: 3rem; color: #28a745; margin-bottom: 15px;">📝</div>
                    <h5 style="font-weight: 700; margin-bottom: 10px;">Easy Registration</h5>
                    <p style="color: #555;">Register for events in a single click and secure your spot instantly.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div style="background: #fff; border-radius: 12px; padding: 35px 20px; text-align:center; box-shadow: 0 8px 20px rgba(0,0,0,0.05); transition: transform 0.3s;">
                    <div style="font-size: 3rem; color: #ffc107; margin-bottom: 15px;">🎫</div>
                    <h5 style="font-weight: 700; margin-bottom: 10px;">Smart Attendance</h5>
                    <p style="color: #555;">Attendance is recorded instantly via QR code for a seamless experience.</p>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="cta-section py-5 text-center" style="background: #eef2f7; border-radius: 12px; margin: 40px 20px;">
    <div class="container">
        <h2 style="font-weight: 700; margin-bottom: 15px;">Join EventSphere Today!</h2>
        <p style="margin-bottom: 25px; color: #666;">Sign up or login to register for events and never miss out on the latest happenings.</p>
        <a href="Account/Login"
           style="display: inline-block; background: #6C63FF; color: #fff; font-weight: 600; padding: 15px 40px; border-radius: 50px; box-shadow: 0 6px 20px rgba(0,0,0,0.15); text-decoration:none; transition: all 0.3s;">
            Get Started
        </a>
    </div>
</section>


<style>
    .features-section div:hover {
        transform: translateY(-8px);
    }

    a:hover {
        transform: scale(1.05);
    }
</style>
