@{
    ViewData["Title"] = "Contact Us";
}

<!-- Hero Section -->
<section class="hero-contact-section py-5 text-center" style="background: linear-gradient(135deg, #6C63FF, #FF6584); color: #fff;">
    <div class="container py-5">
        <h1 class="display-4 fw-bold mb-3" style="text-shadow: 2px 2px 10px rgba(0,0,0,0.2);">
            Get in Touch with EventSphere
        </h1>
        <p class="lead mb-4" style="text-shadow: 1px 1px 6px rgba(0,0,0,0.2);">
            Have questions or suggestions? Drop us a message and we’ll get back to you promptly.
        </p>
    </div>
</section>

<!-- Contact Info & Form Section -->
<section class="contact-section py-5 bg-light">
    <div class="container">
        <div class="row g-5">
            <!-- Contact Info Cards -->
            <div class="col-md-4">
                <div class="card shadow-sm border-0 p-4 text-center h-100 contact-card">
                    <i class="fas fa-envelope fa-2x mb-3 text-primary"></i>
                    <h5 class="fw-bold mb-2">Email</h5>
                    <p class="text-muted">support@eventsphere.com</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm border-0 p-4 text-center h-100 contact-card">
                    <i class="fas fa-phone fa-2x mb-3 text-success"></i>
                    <h5 class="fw-bold mb-2">Phone</h5>
                    <p class="text-muted">+92 300 1234567</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm border-0 p-4 text-center h-100 contact-card">
                    <i class="fas fa-map-marker-alt fa-2x mb-3 text-danger"></i>
                    <h5 class="fw-bold mb-2">Address</h5>
                    <p class="text-muted">123 College Road, Karachi, Pakistan</p>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="col-12 mt-5">
                <div class="card shadow-lg border-0 p-5">
                    <h3 class="mb-4 fw-bold text-center">Send Us a Message</h3>
                    <form method="post" asp-action="Contact">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <input type="text" name="Name" class="form-control form-control-lg" placeholder="Your Name" required style="border-radius:50px; padding:12px;">
                            </div>
                            <div class="col-md-6">
                                <input type="email" name="Email" class="form-control form-control-lg" placeholder="Your Email" required style="border-radius:50px; padding:12px;">
                            </div>
                            <div class="col-12">
                                <input type="text" name="Subject" class="form-control form-control-lg" placeholder="Subject" required style="border-radius:50px; padding:12px;">
                            </div>
                            <div class="col-12">
                                <textarea name="Message" rows="5" class="form-control form-control-lg" placeholder="Your Message" required style="border-radius:25px; padding:15px;"></textarea>
                            </div>
                            <div class="col-12 text-center mt-3">
                                <button type="submit" class="btn btn-gradient btn-lg fw-bold" style="padding:12px 50px; border-radius:50px;">
                                    Send Message
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


