@model IEnumerable<EventSphere.Models.AttendanceViewModel>
@{
    int eventId = ViewBag.EventId;
}

<div class="container my-5">
    <!-- Header -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-person-check-fill"></i> Mark Attendance
        </h2>
        <p class="text-muted">Manage student attendance for this event</p>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info shadow-sm text-center">
            <i class="bi bi-info-circle"></i> No students registered for this event yet.
        </div>
    }
    else
    {
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th><i class="bi bi-person-fill"></i> Name</th>
                            <th><i class="bi bi-envelope-fill"></i> Email</th>
                            <th><i class="bi bi-activity"></i> Status</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                        }
                        @foreach (var student in Model)
                        {
                            <tr class="table-row-hover">
                                <td>@i</td>
                              
                                <td>@student.Email</td>
                                <td>
                                    @if (student.Attended)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle-fill"></i> Present
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-x-circle-fill"></i> Absent
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (!student.Attended)
                                    {
                                        <form asp-action="MarkPresent" method="post" class="d-inline">
                                            <input type="hidden" name="eventId" value="@eventId" />
                                            <input type="hidden" name="studentId" value="@student.StudentId" />
                                            <button type="submit" class="btn btn-sm btn-success shadow-sm">
                                                <i class="bi bi-check2"></i> Mark Present
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-secondary shadow-sm" disabled>
                                            <i class="bi bi-lock-fill"></i> Already Present
                                        </button>
                                    }
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<!-- Custom Styling -->
<style>
    .table-row-hover:hover {
        background: rgba(0, 123, 255, 0.05);
        transition: 0.2s ease-in-out;
    }

    .btn-success {
        transition: all 0.3s ease-in-out;
    }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0px 6px 15px rgba(0,0,0,0.2);
        }
</style>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
