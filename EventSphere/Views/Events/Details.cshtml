@model EventSphere.Models.Event

<div class="event-details">
    <!-- Hero Section -->
    <div class="event-hero text-white text-center py-5 mb-4 rounded shadow"
         style="background: linear-gradient(135deg, #007bff, #6610f2);">
        <h1 class="display-5 fw-bold">@Model.Title</h1>
        <p class="lead mb-0">
            <i class="bi bi-calendar-event"></i> @Model.Date.ToString("dddd, dd MMM yyyy")
            | <i class="bi bi-geo-alt-fill"></i> @Model.Venue
        </p>
    </div>

    <!-- Details Section -->
    <div class="card shadow-lg border-0 mb-5">
        <div class="card-body p-4">
            <div class="row mb-3">
                <div class="col-md-6 mb-3">
                    <h5><i class="bi bi-tags-fill text-primary"></i> Category</h5>
                    <p class="text-muted fs-5">@Model.Category</p>
                </div>
                <div class="col-md-6 mb-3">
                    <h5><i class="bi bi-person-fill text-success"></i> Organizer</h5>
                    <p class="text-muted fs-5">
                        @* Uncomment if Organizer is included *@
                        @* @Model.Organizer?.FullName *@
                        EventSphere Organizer
                    </p>
                </div>
            </div>

            <hr />

            <h5><i class="bi bi-info-circle-fill text-info"></i> Description</h5>
            <p class="fs-5" style="line-height: 1.8;">
                @Model.Description
            </p>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
        <div>
            @if (User.IsInRole("Admin") ||
                        (User.IsInRole("Organizer") && Model.OrganizerId ==
                        (User.Claims.First(c => c.Type == "sub" ||
                        c.Type == "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier").Value)))
            {
                <a asp-action="Edit" asp-route-id="@Model.EventId"
                   class="btn btn-warning me-2">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@Model.EventId"
                   class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </a>
            }
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
