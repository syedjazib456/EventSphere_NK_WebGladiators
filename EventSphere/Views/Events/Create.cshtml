@model EventSphere.Models.Event
@{
    ViewData["Title"] = "Create Event";
    ViewData["FormAction"] = "Create";
}

<div class="container my-5">
    <!-- Header -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-gradient">
            <i class="bi bi-calendar-plus-fill"></i> @ViewData["Title"]
        </h2>
        <p class="text-muted">Fill in the details to schedule a new event</p>
    </div>

    <!-- Form Card -->
    <div class="card classy-card mx-auto">
        <div class="card-body p-4">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-bold">
                        <i class="bi bi-type"></i> Title
                    </label>
                    <input asp-for="Title" class="form-control" placeholder="Enter event title..." />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">
                        <i class="bi bi-card-text"></i> Description
                    </label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Write event details..."></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="Category" class="form-label fw-bold">
                        <i class="bi bi-tags-fill"></i> Category
                    </label>
                    <input asp-for="Category" class="form-control" placeholder="e.g., Workshop, Seminar" />
                </div>

                <div class="mb-3">
                    <label asp-for="Date" class="form-label fw-bold">
                        <i class="bi bi-calendar-event-fill"></i> Date
                    </label>
                    <input asp-for="Date" type="date" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Venue" class="form-label fw-bold">
                        <i class="bi bi-geo-alt-fill"></i> Venue
                    </label>
                    <input asp-for="Venue" class="form-control" placeholder="Enter venue location..." />
                    <span asp-validation-for="Venue" class="text-danger small"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn classy-btn">
                        <i class="bi bi-plus-circle"></i> Create Event
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Custom Styling -->
<style>
    .text-gradient {
        background: linear-gradient(45deg, #0d6efd, #6610f2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .classy-card {
        max-width: 650px;
        border: none;
        border-radius: 20px;
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(10px);
        box-shadow: 0 8px 30px rgba(0,0,0,0.1);
    }

    .classy-btn {
        background: linear-gradient(45deg, #0d6efd, #6610f2);
        border: none;
        color: #fff;
        font-weight: 600;
        border-radius: 12px;
        padding: 12px;
        transition: all 0.3s ease-in-out;
    }

        .classy-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0px 8px 20px rgba(0,0,0,0.2);
        }
</style>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
