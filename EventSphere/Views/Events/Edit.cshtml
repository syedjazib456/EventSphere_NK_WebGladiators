@{
    ViewData["Title"] = "Edit Event";
    ViewData["FormAction"] = "Edit";
}
@model EventSphere.Models.Event

<div class="container my-5">
    <!-- Page Title -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">
            <i class="bi bi-pencil-square"></i> Edit Event
        </h1>
        <p class="text-muted">Update event details and make it shine ✨</p>
    </div>

    <!-- Card -->
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-5">
            <form asp-action="@ViewData["FormAction"]" method="post">
                <div class="row g-4">
                    <!-- Title -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-type"></i> Title
                        </label>
                        <input asp-for="Title" class="form-control form-control-lg shadow-sm" placeholder="Enter event title" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <!-- Category -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-tags-fill"></i> Category
                        </label>
                        <input asp-for="Category" class="form-control form-control-lg shadow-sm" placeholder="e.g. Workshop, Seminar" />
                    </div>

                    <!-- Description -->
                    <div class="col-12">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-card-text"></i> Description
                        </label>
                        <textarea asp-for="Description" rows="4" class="form-control shadow-sm" placeholder="Enter detailed description"></textarea>
                    </div>

                    <!-- Date -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-calendar-event"></i> Date
                        </label>
                        <input asp-for="Date" type="date" class="form-control form-control-lg shadow-sm" />
                    </div>

                    <!-- Venue -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-geo-alt-fill"></i> Venue
                        </label>
                        <input asp-for="Venue" class="form-control form-control-lg shadow-sm" placeholder="Event location" />
                    </div>
                </div>

                <!-- Actions -->
                <div class="d-flex justify-content-between align-items-center mt-5">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-gradient btn-lg px-5">
                        <i class="bi bi-check-circle-fill"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Custom Gradient Button -->
<style>
    .btn-gradient {
        background: linear-gradient(135deg, #007bff, #6610f2);
        color: #fff;
        border: none;
        transition: 0.3s ease-in-out;
        box-shadow: 0px 4px 10px rgba(0,0,0,0.2);
    }

        .btn-gradient:hover {
            background: linear-gradient(135deg, #0056b3, #520dc2);
            transform: translateY(-2px);
        }
</style>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
