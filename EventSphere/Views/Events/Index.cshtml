@model IEnumerable<EventSphere.Models.Event>

<div class="container my-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-calendar-event"></i> Manage Events
        </h2>
        <a asp-action="Create" class="btn btn-gradient btn-lg shadow">
            <i class="bi bi-plus-circle"></i> Create Event
        </a>
    </div>

    <!-- Event Table -->
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-dark">
                    <tr>
                        <th><i class="bi bi-type"></i> Title</th>
                        <th><i class="bi bi-tags-fill"></i> Category</th>
                        <th><i class="bi bi-calendar2-date"></i> Date</th>
                        <th><i class="bi bi-geo-alt-fill"></i> Venue</th>
                        <th><i class="bi bi-person-circle"></i> Organizer</th>
                        <th class="text-center" style="width:220px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model)
                    {
                        <tr class="table-row-hover">
                            <td>@e.Title</td>
                            <td>@e.Category</td>
                            <td>@e.Date.ToString("dd MMM yyyy")</td>
                            <td>@e.Venue</td>
                            <td>@e.Organizer?.FullName</td>
                            <td class="text-center">
                                <a asp-controller="Attendance" asp-action="MarkAttendance" asp-route-eventId="@e.EventId"
                                   class="btn btn-sm btn-outline-primary me-1" title="Mark Attendance">
                                    <i class="bi bi-check2-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@e.EventId"
                                   class="btn btn-sm btn-outline-info me-1" title="View">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@e.EventId"
                                   class="btn btn-sm btn-outline-warning me-1" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@e.EventId"
                                   class="btn btn-sm btn-outline-danger" title="Delete">
                                    <i class="bi bi-trash3-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Custom Styling -->
<style>
    .btn-gradient {
        background: linear-gradient(135deg, #007bff, #6610f2);
        color: #fff !important;
        border: none;
        transition: all 0.3s ease-in-out;
    }

        .btn-gradient:hover {
            background: linear-gradient(135deg, #0056b3, #520dc2);
            transform: translateY(-2px);
            box-shadow: 0px 6px 15px rgba(0,0,0,0.2);
        }

    .table-row-hover:hover {
        background: rgba(0, 123, 255, 0.05);
        transition: 0.2s;
    }
</style>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
